for enemy in enemies:
    eneemy.shape('circle')
    enemy.penup()
    enemy.speed(0)
    x = random.randint(-200, 200) #this is to start each enemy at a different spot
    y = random.randint(100, 250)
    enemy.setposition(x, y)

enemyspeed = 2






#Main game loop
while True:
    for enemy in enemies # so all the enemies can move
        #Move the enemy
         x = enemy.xcor()
         x += enemyspeed 
         enemy.setx(x)
 
         #Reverse the enemy and move down
         if enemy.xcor() > 280:
             y = enemy.ycor()
             y -= 40
             enemyspeed *= -1
             enemysety(y)

         if enemy.xcor() < -280:
             y = enemy.ycor()
             y -= 40
             enemyspeed *= -1
             enemysety(y)

